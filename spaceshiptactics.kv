<GameScreen>:
	background_image: background_image
	label_preview_attack: label_preview_attack
	label_selected_ship_stats_1: label_selected_ship_stats_1
	label_selected_ship_stats_2: label_selected_ship_stats_2
	label_selected_ship_stats_3: label_selected_ship_stats_3
	label_temp_result: label_temp_result
	btn_give_up: btn_give_up
	animation_animation_speed_label: animation_animation_speed_label
	#animation_animation_speed: animation_animation_speed
	#animation_movement_speed: animation_movement_speed
	#animation_image: animation_image
	FloatLayout:
		#size_hint: None, None
		#width: "1024dp"
		#height: "568dp"
		Image:
			id: background_image
			size_hint: None, None
			size: "1024dp", "568dp"
			pos: "0dp", "200dp"
		BoxLayout:
			size_hint: None, None
			height: "200dp"
			width: "1024dp"
			pos: "0dp", "0dp"
			BoxLayout:
				orientation: "vertical"
				size_hint: None, 1
				width: "80dp"
				#Slider:
				#	id: animation_movement_speed
				#	min: 10
				#	max: 20
				Label:
					id: animation_animation_speed_label
				Slider:
				#	id: animation_animation_speed
					min: 3
					max: 10
					value: 10
					on_value: root.change_animation_speed(self.value)
				Button:
					id: btn_give_up
					on_press: root.change_screen_to_menu()
			Label:
				id: label_temp_result
				markup: True
			BoxLayout:
				orientation: "horizontal"
				size_hint: None, None
				size: "724dp", "200dp"
				Label:
					id: label_selected_ship_stats_1
					markup: True
				Label:
					id: label_selected_ship_stats_2
					markup: True
				Label:
					id: label_selected_ship_stats_3
					markup: True
				Label
					id: label_preview_attack
					text: root.label_preview_attack_text
					markup: True
		#Image:
			#id: animation_image
			#opacity: 0
<MenuScreen>:
	btn_singleplayer_game: btn_singleplayer_game
	btn_hot_seat_game: btn_hot_seat_game
	btn_network_game: btn_network_game
	btn_exit_game: btn_exit_game
	FloatLayout:
		Image:
			source: root.backgroud_image
		AnchorLayout:
			size_hint: None, None
			size: "1024dp", "600dp"
			pos: self.parent.x, self.parent.y + 80
			BoxLayout:
				orientation: "vertical"
				size_hint: None, None
				size: "200dp", "250dp"
				Button:
					id: btn_singleplayer_game
					size_hint: None, None
					size: "200dp", "50dp"
					text: root.loc_singleplayer_game	#"Singleplayer Game"
					disabled: True
					on_press: root.start_singleplayer_game()		# root.change_screen_to_arrangemenu()
				Button:
					id: btn_hot_seat_game
					size_hint: None, None
					size: "200dp", "50dp"
					text: root.loc_hot_seat_game	#"Hot seat Game"
					on_press: root.start_hot_seat_game()		# root.change_screen_to_arrangemenu()
				Button:
					id: btn_network_game
					size_hint: None, None
					size: "200dp", "50dp"
					text: root.loc_network_game	#"Network Game"
					disabled: True
					on_press: root.start_network_game()		# root.change_screen_to_arrangemenu()
				BoxLayout:
					orientation: "horizontal"
					#Widget:
					Button:
						size_hint: None, None
						size: "100dp", "50dp"
						on_press: root.change_language_to_english()
						Image:
							source: root.english_flag
							x: self.parent.x
							y: self.parent.y
							size: self.parent.width, self.parent.height
					Button:
						size_hint: None, None
						size: "100dp", "50dp"
						on_press: root.change_language_to_russian()
						Image:
							source: root.russian_flag
							x: self.parent.x
							y: self.parent.y
							size: self.parent.width, self.parent.height
					#Widget:
				Button
					id: btn_exit_game
					size_hint: None, None
					size: "200dp", "50dp"
					text: root.loc_exit_game	#"Exit"
					on_press: root.exit_app()

